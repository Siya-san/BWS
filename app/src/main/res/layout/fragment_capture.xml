<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas/android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|top"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- SIGHTING_ID (hidden field, autogenerated, no input needed) -->

    <!-- USER_ID (hidden, possibly auto-fetched from login) -->
    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="@string/capture_sighting"
        android:textColor="@color/green_700"
        android:textAlignment="center"
        android:textSize="28sp"
        android:textStyle="bold" />
    <!-- Location Latitude -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/captured_image" />

    <Button
        android:id="@+id/uploadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/capture_image"
        android:layout_marginTop="20dp" />

    <!-- Bird Species -->
    <TextView
        android:textColor="@color/green_700"
        android:id="@+id/textLabelSpecies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/bird_species"
        android:textSize="24sp"
        />

    <EditText
        android:id="@+id/editName"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_margin="16dp"

        android:background="@drawable/text_input"

        android:hint="@string/bird_species"
        android:padding="15dp"
        android:textColor="@color/green"

        android:textSize="18sp"
        android:autofillHints="250" />


    <!-- Save Button -->
    <Button
        android:id="@+id/buttonSaveSighting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save_sighting"
    />


</LinearLayout>


