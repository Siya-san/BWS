<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas/android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|top"
    android:orientation="vertical"
    android:padding="16dp">


    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="@string/capture_sighting"
        android:textColor="@color/green_700"
        android:textAlignment="center"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:textColor="@color/green_700"
        android:textAlignment="center"
        android:textSize="24sp"

        android:id="@+id/camera_btn_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/take_photo"
        android:labelFor="@+id/camera"/>

    <Button
        android:id="@+id/camera"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@android:drawable/ic_menu_camera"
       />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:contentDescription="@string/captured_image" />



    <!-- Bird Species -->
    <TextView
        android:textColor="@color/green_700"
        android:id="@+id/textLabelSpecies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/bird_species"
        android:textSize="24sp"
        />

    <EditText
        android:id="@+id/editName"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_margin="16dp"

        android:background="@drawable/text_input"

        android:hint="@string/bird_species"
        android:padding="15dp"
        android:textColor="@color/green"

        android:textSize="18sp"
        android:autofillHints="250" />


    <!-- Save Button -->
    <Button
        android:id="@+id/buttonSaveSighting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save_sighting"
    />


</LinearLayout>


